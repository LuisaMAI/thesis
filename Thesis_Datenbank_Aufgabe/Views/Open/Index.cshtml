@model IEnumerable<Thesis_Datenbank_Aufgabe.Models.Thesis>

@{
    ViewBag.Title = "Index";
}

<h2>Alle offenen Thesen</h2>

<p>
    @Html.ActionLink("neue Thesis hinzufügen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
       <th>
           @Html.DisplayNameFor(model => model.supervisor)
       </th>
        <th>
            @Html.DisplayNameFor(model => model.Bachelor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Master)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentID)
        </th>
  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <a href="mailto:model.supervisor.mail">@Html.DisplayFor(modelItem => item.supervisor)</a>
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Bachelor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Master)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            <a href="mailto:model.StudentEmail">@Html.DisplayFor(modelItem => item.StudentName)</a>
</td>
        
        <td>
            @Html.DisplayFor(modelItem => item.StudentID)
        </td>
        
        <td>
            @Html.ActionLink("Bearbeiten", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Hinzufügen", "Create", new {id =item.Id})
        </td>
    </tr>
}

</table>
